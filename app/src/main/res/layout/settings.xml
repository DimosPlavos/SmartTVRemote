<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040D36"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutSett"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:background="@null"
            android:contentDescription=" "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_colour" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:inputType="textPersonName"
            android:text="Ρυθμίσεις"
            android:textColor="#1BFFB6"
            android:textSize="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSettings"
        android:layout_width="387dp"
        android:layout_height="551dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSett"
        >

        <Button
            android:id="@+id/sett_screen"
            android:layout_width="350dp"
            android:layout_height="13dp"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            android:background="@drawable/settings"
            android:text="Οθόνη"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/sett_timer"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            android:background="@drawable/settings"
            android:text="Χρονοδιακόπτης"
            android:textAllCaps="false"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <Button
            android:id="@+id/sett_internet"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            android:background="@drawable/settings"
            android:text="Δίκτυο"
            android:textAllCaps="false"
            android:textSize="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/sett_info"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:background="@drawable/settings"
            android:text="Πληροφορίες"
            android:textAllCaps="false"
            android:textSize="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>