<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040D36"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutSett"
        android:layout_width="401dp"
        android:layout_height="156dp"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingClass">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="62dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:contentDescription=" "
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_colour" />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="250dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:inputType="textPersonName"
            android:text="Οδηγίες Μικροφώνου"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TableLayout
        android:layout_width="322dp"
        android:layout_height="321dp"
        android:layout_marginTop="40dp"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutSett">

        <TableRow
            android:layout_width="match_parent"
            android:minHeight="40dp">

            <TextView
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:text=" 1. Say &quot;Turn on&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TV turns On." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:text=" 2. Say &quot;Turn off&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tv turns Off." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:text=" 3. Say &quot;Next&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Channel goes +1." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:text=" 4. Say &quot;Previous&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Channel goes -1." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:text=" 5. Say &quot;Volume up&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Volume goes +1." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:text=" 6. Say &quot;Volume down&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Volume goes -1." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:text=" 7. Say &quot;Mute&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Volume is set to mute." />
        </TableRow>

        <TableRow android:minHeight="40dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:text=" 8. Say &quot;Unmute&quot;: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Volume is unmuted." />
        </TableRow>


    </TableLayout>





</androidx.constraintlayout.widget.ConstraintLayout>