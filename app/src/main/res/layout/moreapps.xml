<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040D36"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="363dp"
        android:layout_height="236dp"
        android:background="@drawable/settings"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:src="@drawable/youtube" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" Youtube"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:background="@drawable/cat_background"
                android:src="@drawable/minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:src="@drawable/spotify" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" Spotify"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:background="@drawable/cat_background"
                android:src="@drawable/minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:src="@drawable/netflix" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" Netflix"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:background="@drawable/cat_background"
                android:src="@drawable/minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:src="@drawable/googleapp" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" Google"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:background="@drawable/cat_background"
                android:src="@drawable/minus" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="333dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:text="Εμφανιζόμενες Εφαρμογές"
        android:textAlignment="center"
        android:textColor="#E3E3E3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSett" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="359dp"
        android:layout_height="80dp"
        android:background="@drawable/settings"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="36dp"
                android:src="@drawable/applemusic" />

            <TextView
                android:id="@+id/sett_info"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" Apple Music"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="29dp"
                android:background="@drawable/cat_background"
                android:src="@drawable/plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>


    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="354dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:inputType="textPersonName"
        android:text="Πρόσθεσε στην Αρχική Οθόνη"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#E3E3E3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutSett"
        android:layout_width="438dp"
        android:layout_height="89dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingClass">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="62dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:contentDescription=" "
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_colour" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="291dp"
        android:layout_height="90dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:srcCompat="@drawable/googlr_app_store" />


</androidx.constraintlayout.widget.ConstraintLayout>
